
<%= simple_form_for [ @restaurant ] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORY, prompt: "Please select the restaurant's category"%>
  <br>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>

